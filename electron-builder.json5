{
  "appId": "com.thedong.serialtool",
  "productName": "SerialTool",
  "asar": true,
  "icon": "resources/icon.ico",
  "publish": [
    {
      "provider": "github",
      "owner": "thedongcc",
      "repo": "SerialTool",
      "releaseType": "draft",
      "releaseNotesFile": "release_notes.md"
    }
  ],
  "releaseInfo": {
    "releaseNotesFile": "release_notes.md"
  },
  "win": {
    "icon": "resources/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "SerialTool",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "package.json"
  ]
}
