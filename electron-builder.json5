{
  "appId": "com.thedong.serialtool",
  "asar": true,
  "publish": [
    {
      "provider": "github",
      "owner": "thedongcc",
      "repo": "SerialTool",
      "releaseType": "draft"
    }
  ],
  "releaseInfo": {
    "releaseNotesFile": "release_notes.md"
  },
  "productName": "SerialTool",
  "win": {
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "shortcutName": "SerialTool"
  },
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "package.json"
  ]
}
